@model TicTacToe.Models.Game

@{
    ViewData["Title"] = "Крестики-Нолики";
}

<!-- Подключаем jQuery (предполагая, что вы используете стандартный шаблон ASP.NET Core) -->
@{
    Layout = "_Layout"; // Убедитесь, что ваш _Layout подключает jQuery
}

<style>
    /* Пастельная тема: мягко, воздушно, без резкого контраста */
    :root {
        --bg-1: #FFF7FB; /* очень светлый розово-молочный */
        --bg-2: #F3FBFF; /* очень светлый голубой */
        --card: rgba(255,255,255,.78);
        --card-border: rgba(140, 120, 160, .18);
        --text: #3E3A45;
        --muted: #6E6776;
        --board-bg: rgba(255,255,255,.55);
        --board-border: rgba(140, 120, 160, .18);
        --cell-bg: rgba(255,255,255,.92);
        --cell-hover: #F7F0FF; /* лёгкая сирень */
        --cell-pressed: #EFE6FF;
        --x: #E36B8B; /* пастельный розово-малиновый */
        --o: #5BA9C8; /* пастельный бирюзово-голубой */

        --disabled-bg: rgba(232, 226, 240, .75);
        --focus: rgba(179, 140, 255, .45);
        --btn: #BFA6FF; /* лавандовый */
        --btn-hover: #AD92FF;
        --btn-text: #ffffff;
        --radius-lg: 18px;
        --radius-md: 14px;
        --shadow: 0 18px 55px rgba(40, 20, 60, .10);
    }

    body {
        font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--text);
        background: radial-gradient(900px 500px at 15% 15%, rgba(255, 214, 239, .55), transparent 60%), radial-gradient(700px 420px at 85% 20%, rgba(197, 240, 255, .55), transparent 60%), linear-gradient(135deg, var(--bg-1), var(--bg-2));
    }

    .game-wrapper {
        text-align: center;
        padding: 22px 22px 18px;
        background: var(--card);
        border: 1px solid var(--card-border);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        max-width: 420px;
        width: calc(100% - 32px);
    }

    .title {
        margin: 4px 0 10px;
        font-size: 28px;
        letter-spacing: .2px;
        color: var(--text);
    }

    .status p {
        margin: 0;
        padding: 10px 12px;
        font-size: 1.05em;
        font-weight: 600;
        color: var(--muted);
        background: rgba(255,255,255,.6);
        border: 1px solid rgba(140, 120, 160, .14);
        border-radius: 12px;
    }

    .game-board {
        display: grid;
        grid-template-columns: repeat(3, 96px);
        grid-template-rows: repeat(3, 96px);
        gap: 10px;
        margin: 18px auto 10px;
        padding: 12px;
        background: var(--board-bg);
        border: 1px solid var(--board-border);
        border-radius: var(--radius-lg);
        max-width: 360px;
    }

    /* Ячейки */
    .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2.35em;
        font-weight: 800;
        border-radius: var(--radius-md);
        user-select: none;
        background: var(--cell-bg);
        border: 1px solid rgba(140, 120, 160, .14);
        box-shadow: 0 10px 18px rgba(40, 20, 60, .06), inset 0 1px 0 rgba(255,255,255,.7);
        transition: transform .08s ease, background-color .18s ease, box-shadow .18s ease, border-color .18s ease;
    }

    .playable {
        cursor: pointer;
    }

        .playable:hover {
            background: var(--cell-hover);
            border-color: rgba(179, 140, 255, .35);
            box-shadow: 0 14px 26px rgba(40, 20, 60, .10), inset 0 1px 0 rgba(255,255,255,.75);
            transform: translateY(-1px);
        }

        .playable:active {
            background: var(--cell-pressed);
            transform: translateY(0px) scale(0.99);
        }

    /* Цвета фигур */
    .X {
        color: var(--x);
        text-shadow: 0 6px 18px rgba(227, 107, 139, .22);
    }

    .O {
        color: var(--o);
        text-shadow: 0 6px 18px rgba(91, 169, 200, .22);
    }

    /* Заблокированные */
    .disabled-cell {
        background: var(--disabled-bg);
        cursor: default;
        opacity: 0.92;
        box-shadow: inset 0 1px 0 rgba(255,255,255,.6);
    }

    /* Кнопка */
    .restart-button {
        padding: 11px 18px;
        font-size: 1.05em;
        font-weight: 700;
        background: linear-gradient(180deg, var(--btn), #B79BFF);
        color: var(--btn-text);
        border: 0;
        border-radius: 999px;
        cursor: pointer;
        box-shadow: 0 14px 30px rgba(191, 166, 255, .30);
        transition: transform .08s ease, filter .18s ease, box-shadow .18s ease;
    }

        .restart-button:hover {
            filter: brightness(1.02);
            box-shadow: 0 18px 36px rgba(191, 166, 255, .38);
            transform: translateY(-1px);
        }

        .restart-button:active {
            transform: translateY(0px);
            box-shadow: 0 12px 24px rgba(191, 166, 255, .30);
        }

        /* Доступность: фокус */
        .playable:focus-visible,
        .restart-button:focus-visible {
            outline: 3px solid var(--focus);
            outline-offset: 3px;
        }

    {
        grid-template-columns: repeat(3, 86px);
        grid-template-rows: repeat(3, 86px);
        gap: 9px;
    }

    .title {
        font-size: 24px;
    }

    .cell {
        font-size: 2.15em;
    }

    }
</style>

<div class="game-wrapper">
    <h1 class="title">Крестики-Нолики</h1>
    <div class="status"><p id="status-message">@Model.StatusMessage</p></div>

    <!-- Общий контейнер для сетки -->
    <div class="game-board" id="game-board">

        @for (int i = 0; i < 9; i++)
        {
            int position = i + 1;
            string cellValue = Model.Board[i];

            bool isOccupied = cellValue == "X" || cellValue == "O";

            // ВСЕ ячейки становятся кликабельными элементами (div),
            // которые будут ловить клик через JS.
            <div class="cell @(isOccupied ? "disabled-cell " + cellValue : "playable")"
                 data-position="@position"
                 data-occupied="@(isOccupied ? "true" : "false")">
                @cellValue
            </div>
        }
    </div>


    <!-- Кнопка рестарта (остается как POST) -->
    <form method="post" asp-action="Restart" asp-controller="Game" style="margin-top: 20px;">
        <button type="button" id="restart-button" class="restart-button">Сыграть ещё раз</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        const $board = $('#game-board');
        const $status = $('#status-message');

        // --- ФУНКЦИИ ОБНОВЛЕНИЯ DOM ---

        // Функция для обновления DOM на основе данных от сервера
        function updateBoard(response) {
            const newBoard = response.board;

            $('.cell').each(function(index) {
                const $cell = $(this);
                const cellValue = newBoard[index];

                $cell.text(cellValue);

                // Сбрасываем все классы, кроме базовых
                $cell.removeClass('disabled-cell X O playable');

                if (cellValue === 'X' || cellValue === 'O') {
                    // Ячейка занята
                    $cell.addClass('disabled-cell ' + cellValue);
                    $cell.removeAttr('data-position');
                } else {
                    // Ячейка свободна (это может быть либо цифра, либо пустая строка, если игра закончилась)
                    $cell.addClass('playable');
                    // Устанавливаем data-position обратно, если поле снова доступно
                    $cell.attr('data-position', index + 1);
                }
            });
        }

        // Функция для отображения загрузки
        function showLoading(isLoading) {
            if (isLoading) {
                $board.find('.playable').css('pointer-events', 'none');
                $status.text('Обработка хода...');
            } else {
                $board.find('.playable').css('pointer-events', 'auto');
            }
        }

        // Функция для сброса состояния игры (вызывается при полной перезагрузке)
        function resetUIState() {
             // Эта часть нужна только если игра завершилась, чтобы заблокировать клики
             if ($status.text().includes("победил") || $status.text().includes("Ничья")) {
                 $board.find('.playable').removeClass('playable').addClass('disabled-cell');
                 $board.find('.playable').removeAttr('data-position');
             }
        }

        // --- ОБРАБОТКА КЛИКОВ (AJAX) ---

        $board.on('click', '.playable', function() {
            const position = $(this).data('position');

            showLoading(true);

            $.ajax({
                url: '@Url.Action("PlayerMove", "Game")',
                type: 'POST',
                data: { position: position },
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        updateBoard(response); // Обновляем DOM
                        $status.text(response.status);

                        if (response.isGameOver) {
                            showLoading(false);
                            // Если игра окончена, блокируем все клики через класс
                            $board.find('.playable').removeClass('playable').addClass('disabled-cell');
                        } else {
                             showLoading(false);
                        }
                    } else {
                        $status.text(response.status || "Ошибка хода.");
                        showLoading(false);
                    }
                },
                error: function() {
                    $status.text("Сетевая ошибка. Повторите попытку.");
                    showLoading(false);
                }
            });
        });

        $('#restart-button').on('click', function() {
        showLoading(true);

        $.ajax({
            url: '@Url.Action("Restart", "Game")',
            type: 'POST',
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    // Используем ту же функцию updateBoard для полной перерисовки
                    updateBoard(response);
                    $status.text(response.status);
                    showLoading(false);
                } else {
                    $status.text("Не удалось перезапустить игру.");
                    showLoading(false);
                }
            },
            error: function() {
                $status.text("Ошибка при сбросе игры.");
                showLoading(false);
            }
        });
    });


        // ------------------------------------------------------------------
        // ВЫЗОВ ПРИ ПЕРВОЙ ЗАГРУЗКЕ СТРАНИЦЫ (ПОКРЫВАЕТ И ПЕРЕЗАГРУЗКУ ПОСЛЕ RESTART)
        // ------------------------------------------------------------------

        // Создаем фейковый ответ, чтобы обновить UI на основе текущего состояния,
        // которое пришло с сервера (Model.Board)
        const initialBoardData = @Html.Raw(Json.Serialize(Model.Board));
        const initialStatus = @Html.Raw(Json.Serialize(Model.StatusMessage));

        // Вызываем updateBoard с данными, которые уже пришли в представлении
        updateBoard({ board: initialBoardData, status: initialStatus });
        $status.text(initialStatus);

        resetUIState(); // Проверяем, не нужно ли заблокировать игру сразу
    });
</script>